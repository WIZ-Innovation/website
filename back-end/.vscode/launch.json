    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch FutureThread",
            "request": "launch",
            "mainClass": "com.wiz.innovation.threads.FutureThread",
            "projectName": "vertx-base"
        },
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Launch App",
            "request": "launch",
            "mainClass": "com.wiz.App",
            "projectName": "vertx-base",
            "vmArgs": "-Dlog4j2.configurationFile=config/log4j2.yml -Dfile.encoding=UTF-8"
        }
    ]
}